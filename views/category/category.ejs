<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <span class="display-6 fw-medium">
                ID: <%= category.id %>
            </span>
            <h1 class="display-4 fw-bolder">
                <%= category.name %>
            </h1>
            <p class="lead fw-normal text-white-50 mb-0">
                Welcome to <%= category.name %> products page
            </p>
        </div>
    </div>
</header>
<!-- js -->
<section id="category" class="container mt-5 w-100">
    <!-- Children Categories List  -->
    <% if (childCategories?.length !=0) { %>
        <section class="row my-5 py-5">
            <h1 role="button" class="fs-1 pb-3
            fw-bolder line-clamp-1 text-center text-dark 
            link-underline link-dark link-underline-opacity-0 link-underline-opacity-75-hover">
                Child Categories
            </h1>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3
                gx-4 gx-lg-10 flex-grow-1 px-1
                overflow-x-scroll flex-nowrap scrollbar pb-5 px-0">
                <% childCategories.forEach(childCat=> { %>
                    <%- include('../partials/category-card.ejs', {navigatePage, category: childCat}) %>
                    <% }) %>
            </div>
        </section>
        <% } %>
            <!-- Product List Of Category -->
            <%- include('../partials/product-list', {productList: productList, type: "This category"}) %>

</section>