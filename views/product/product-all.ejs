<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">
        Our Products
      </h1>
    </div>
  </div>
</header>
<div>
  <!-- Search bar -->
  <div class="input-group mb-3 mt-4">
    <input type="text" class="form-control" placeholder="Search by product name" id="productNameSearch">
    <button class="btn btn-outline-light" id="searchButton">Search</button>
  </div>

  <!-- Filter bar based on product attributes -->
  <!-- Button to open Filter modal -->
  <button type="button" class="btn btn-outline-light mb-4" data-bs-toggle="modal" data-bs-target="#filterModal">
    Filtruj według atrybutów
  </button>

  <!-- js -->
  <section id="category" class="container mt-5 w-100">
    <!-- Product List -->
    <%- include('../partials/product-list', {productList: productList, type: "This website"}) %>

  </section>

  <!-- Filter Modal -->
  <%- include('../partials/modal', {
    modalId: "filterModal",
    heading: "Filtruj według atrybutów",
    body: `
      <div class="d-flex flex-wrap justify-content-start align-items-center">
        <% productAttributes.forEach(attribute => { %>
  <div class="me-3 mb-2">
    <label for="<%= attribute.aName %>" class="form-label"><%= attribute.aName %>:</label>
    <input type="<%= attribute.aValue === 'number' ? 'number' : 'text' %>" class="form-control" id="<%= attribute.aName %>">
  </div>
  <% }); %>
</div>
<div class="mt-4">
  <button class="btn btn-outline-light" id="filterButton">Filtruj</button>
</div>
`,
isFullScreenSm: false,
}) %>