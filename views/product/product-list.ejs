<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">
                List of Products
            </h1>
        </div>
    </div>
</header>
<section id="categories" class="container mt-5">
    <section class="container px-4 px-lg-5 mt-5 ">
        <h1 class="fs-1 pb-3
        fw-bolder line-clamp-1 text-center text-dark ">
            Product List
        </h1>
        <div class="row px-4 px-lg-5 mt-5
        gx-4 gx-lg-5 gy-5 w-100
            row-cols-1 row-cols-sm-2 row-cols-md-3 
            justify-content-center">
            <% productList.forEach(product=> { %>
                <%- include('../partials/product-card.ejs', {navigatePage, product, formatCurrencyVND}) %>
                    <% }) %>

        </div>
    </section>
</section>